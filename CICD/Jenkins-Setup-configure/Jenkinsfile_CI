pipeline {
    agent { 
        label 'ec2-agent' 
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }
    environment {
        DOCKERHUB_CREDENTIALS = credentials('DockerHub')
        ECR_CREDENTIALS = credentials('ecr-creds')
    }
    stages {
        stage('Checkout') {
            steps{
                git branch: "Jenkins-Setup-Configure", credentialsId: 'github-creds-jenkins-task', url: 'https://github.com/RuslanSerdiuk/DevOps_Tasks_and_solutions.git'      
                }
        }
        stage('Test-Static') {
            steps {
                sh 'sudo docker build -f ./CICD/Jenkins-Setup-configure/Dockerfile -t 384461882996.dkr.ecr.us-east-2.amazonaws.com/ruslan.serdiuk/lambda:$BUILD_NUMBER -t 384461882996.dkr.ecr.us-east-2.amazonaws.com/ruslan.serdiuk/lambda:latest ./CICD/Jenkins-Setup-configure/'
            }
        }
        stage('Login') {
            steps {
                sh 'aws ecr get-login-password --region us-east-2 | docker login --username AWS --password-stdin 384461882996.dkr.ecr.us-east-2.amazonaws.com'
            }
        }
        stage('Push') {
            steps {
                sh 'docker push 384461882996.dkr.ecr.us-east-2.amazonaws.com/ruslan.serdiuk/lambda:latest'
                sh 'docker push 384461882996.dkr.ecr.us-east-2.amazonaws.com/push ruslan.serdiuk/lambda:latest:$BUILD_NUMBER' 
            }
        }
    }
    post {
        always {
        sh 'docker logout'
        }  
    }
}