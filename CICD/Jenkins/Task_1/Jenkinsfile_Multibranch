pipeline {
    agent {
        label 'ubuntu'
        }
    stages {
        stage ('Lint'){
            agent{
                    label 'ubuntu'
                }
            steps{
                    sh 'docker run --rm -i hadolint/hadolint < Dockerfile | tee -a hadolint_lint.txt'
            }
            post {
                always {
                    archiveArtifacts 'hadolint_lint.txt'
                }
            }
        }
        stage('Test Build') {
            agent {
                docker { 
                    image 'openjdk:11'
                    label 'ubuntu' 
                }     
            }
            steps {
                sh 'chmod +x mvnw'
                sh './mvnw package -Dcheckstyle.skip'
            }
        }    
    }
}