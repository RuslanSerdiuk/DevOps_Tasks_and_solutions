pipeline {
    agent { 
        label 'windows' 
    }
    stages {
        stage("Build") {
            steps {
                script {
                    powershell "docker rm dev -f"
                    powershell "docker pull ruslanserdiuk/petclinic:latest"
                    powershell "docker run -d --name dev -p 8082:8080 ruslanserdiuk/petclinic:latest"
                }
            }
        }
    }
}